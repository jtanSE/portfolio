{
  "name": "personal-portfolio",
  "version": "1.0.0",
  "description": "A modern personal portfolio website",
  "main": "index.html",
  "scripts": {
    "dev": "http-server -p 3030 -o",
    "start": "http-server -p 3030",
    "build": "npm run build:clean && npm run build:html && npm run build:css && npm run build:js && npm run build:assets",
    "build:clean": "if exist dist rmdir /s /q dist && mkdir dist",
    "build:html": "html-minifier-terser --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true index.html -o dist/index.html",
    "build:css": "csso styles.css --output dist/styles.css",
    "build:js": "terser script.js --compress --mangle --output dist/script.js",
    "build:assets": "echo 'Assets copied'",
    "package": "npm run build && npm run package:create",
    "package:create": "node create-package.js",
    "package:zip": "npm run package && node create-zip.js",
    "preview": "http-server dist -p 3030 -o"
  },
  "keywords": [
    "portfolio",
    "website",
    "resume",
    "personal"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "html-minifier-terser": "^7.2.0",
    "terser": "^5.24.0",
    "csso-cli": "^4.0.2"
  }
}